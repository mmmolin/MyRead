@page "{bookId:int?}"
@model MyRead.Web.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="post"> 
    <div class="form-group">
        <label asp-for="@Model.Book.Title"></label>
        <input type="text" asp-for="@Model.Book.Title" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Book.Author"></label>
        <input type="text" asp-for="@Model.Book.Author" />
    </div>
    <button type="submit" class="alert-primary">Save</button>
</form>


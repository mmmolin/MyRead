@page "{bookId:int?}"
@model MyRead.Web.Pages.Manager.CreateBookModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Create</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="@Model.BookModel.Title"></label>
        <input type="text" asp-for="@Model.BookModel.Title" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.BookModel.Pages"></label>
        <input type="number" asp-for="@Model.BookModel.Pages" />
    </div>
    <div class="form-group">
        <label>Author</label>
        <select asp-for="@Model.AuthorId" class="authorSelect"
                asp-items="@Model.AuthorSelect">
            <option value="">--Select Author--</option>
        </select>

    </div>
    <button type="submit" class="alert-primary">Save</button>
</form>
<a asp-page="./ListBook" class="btn btn-primary">Return</a>

@section Scripts {
    <script>
        $(document).ready(function () { 
            $(".authorSelect").select2();
        });
    </script>
}

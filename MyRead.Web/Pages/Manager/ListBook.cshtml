@page
@model MyRead.Web.Pages.Books.Manager.IndexModel
@{
    ViewData["Title"] = "List";
}

<h1>Index</h1>
<table class="table">
    @foreach (var book in Model.Books)
    {
        <tr>
            <th>
                @book.Title
            </th>
            <th>
                @book.Author.FirstName @book.Author.LastName
            </th>
            <th>
                <a class="btn btn-primary" asp-page="./UpdateBook" asp-route-bookId="@book.BookID">Edit</a>
            </th>
            <th>
                <a class="btn btn-danger" asp-page="./DeleteBook" asp-route-bookId="@book.BookID">Delete</a>
            </th>
        </tr>
    }
</table>
<a class="btn btn-primary" asp-page="./CreateBook">Add book</a>


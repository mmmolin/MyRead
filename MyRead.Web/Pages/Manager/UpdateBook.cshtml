@page "{bookID:int}"
@model MyRead.Web.Pages.Manager.Books.UpdateModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Book.Title"></label>
        <input type="text" asp-for="Book.Title" />
    </div>
    <div class="form-group">
        <label asp-for="Book.Pages"></label>
        <input type="text" asp-for="Book.Pages" />
    </div>

    <button type="submit">Update</button>
</form>


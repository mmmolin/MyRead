@page "{BookId:int}"
@model MyRead.Web.Pages.Manager.EditBookModel
@{
    ViewData["Title"] = "EditBook";
}

<h1>EditBook</h1>
<form method="post">
    <input type="hidden" asp-for="BookModel.BookID" />
    <div class="form-group">
        <label asp-for="BookModel.Title"></label>
        <input asp-for="BookModel.Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BookModel.CurrentPage"></label>
        <input asp-for="BookModel.CurrentPage" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BookModel.Pages"></label>
        <input asp-for="BookModel.Pages" class="form-control" />
    </div>

    <div class="form-group">
        <label>Author</label>
        <select asp-for="AuthorId" class="authorSelect"
                asp-items="@Model.AuthorSelect">
            <option selected="@Model.BookModel.BookID"></option>
            <option value="">--Select Author--</option>
        </select>
    </div>
    <button type="submit">Update</button>
    <a class="btn btn-primary" asp-page="./ListBook">Return</a>
</form>

<img src="@Model.CoverFilePath" />

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".authorSelect").select2();
        });
    </script>
}


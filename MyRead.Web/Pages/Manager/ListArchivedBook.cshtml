@page
@model MyRead.Web.Pages.Manager.ListArchivedBookModel
@{
    ViewData["Title"] = "ListArchivedBook";
}

<h1>ListArchivedBook</h1>
<table class="table table-hover">
    <tbody>
        @foreach (var archivedBook in Model.ArchivedBooks)
        {
            <tr>
                <th>
                    @archivedBook.Title
                </th>
                <th>
                    @archivedBook.Author.FirstName @archivedBook.Author.LastName
                </th>
                <th>
                    <form method="post" asp-page-handler="UndoArchivedBook" asp-route-bookId="@archivedBook.BookID">
                        <button type="submit" class="btn btn-primary btn-sm">Unarchive</button>
                    </form>
                </th>
                <th>
                    <form method="post" asp-page-handler="DeleteArchivedBook" asp-route-bookId="@archivedBook.BookID">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </th>
            </tr>
        }
    </tbody>    
</table>
<a asp-page="./ListBook" class="btn btn-primary">Back to list</a>
